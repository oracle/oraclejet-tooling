{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "module": "amd",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "lib": ["es2020", "dom", "esnext.asynciterable"],
        "typeRoots": ["./node_modules/@oracle/oraclejet/dist/types", "./node_modules/@types"],
        "paths": {
            "ojs/*": ["./node_modules/@oracle/oraclejet/dist/types/*"],
            "@oracle/oraclejet-preact/*": ["./node_modules/@oracle/oraclejet/dist/js/libs/oraclejet-preact/types/*"],
            "oj-c/*": ["./node_modules/@oracle/oraclejet-core-pack/oj-c/types/*"],
            "preact": ["./node_modules/@oracle/oraclejet/dist/js/libs/preact"]
        },
        "declaration": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["./src/ts/**/*"]
}